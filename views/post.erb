<article>
    <header>
        <h1>
            <a class='blog-heading' href="<%= url(article.slug) %>"> <%= article.title %></a>
        </h1>
        <time class="timeago" datetime="<%= article.date.xmlschema %>">
            <%= article.date.strftime "%Y/%m/%d" %>
        </time>
    </header>
    <section class="content">
        <%= markdown article.content %>
    </section>
    <div class="option-container">
        <div class="delete button">
            <form action="/<%= article.slug %>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Delete">
            </form>
        </div>
        <div class="update button">
            <button onclick="window.location.href='/updateBlog/<%= article.slug %>'">Update</button>
        </div>
    </div>
</article>
